<a class="profile-card d-flex flex-column" href="<%= tutor_profile_path(profile) %>">
  <div class="profile-card-image" style="background-image: url('<%= profile.user.picture %>')"></div>
  <div class="profile-card-content flex-grow-1">
    <div class="profile-card-title">
      <h4><%= profile.user.name %></h4>
    </div>
    <p><%= profile.bio %></p>
  </div>
  <div class="profile-card-actions">
    <% profile.tutor_languages.each do |tutor_language| %>
      <div class="btn btn-info btn-sm">
        <%= tutor_language.language.name %> <span class="badge badge-light"><%= tutor_language.get_likes.size %></span>
      </div>
    <% end %>
  </div>
</a>
